{
    "openapi": "3.0.0",
    "info": {
        "title": "Agent AWS API",
        "version": "1.0.0",
        "description": "APIs helpeing customers with knowledge of AWS by querying the AWS Well-Architected Framework, writing Terraform code."
    },
    "paths": {
        "/answer_query": {
            "get": {
                "summary": "Query the the AWS Well-Architected Framework to answer a customer question.",
                "description": "Query the the AWS Well-Architected Framework to answer a customer question. The API takes in the customer query then returns the answer and list of documents.",
                "operationId": "queryWellArch",
                "parameters": [
                    {
                        "name": "query",
                        "in": "path",
                        "description": "Customer query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],                
                "responses": {
                    "200": {
                        "description": "Query the the AWS Well-Architected Framework to answer a customer question.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "answer": {
                                            "type": "string",
                                            "description": "The response to customer query and list of documents cited."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/iac_gen": {
            "get": {
                "summary": "Generate IaC code for customer",
                "description": "Write Terraform code for the client. The API takes in the customer query and returns the code for the customer.",
                "operationId": "iac_gen_tool",
                "parameters": [
                    {
                        "name": "query",
                        "in": "path",
                        "description": "Customer query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Terraform code customer requested",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "string",
                                            "description": "The code customer requested"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/iac_estimate_tool": {
            "get": {
                "summary": "Estimate infrastructure costs.",
                "description": "Estimate the cost of infrastructure based on the generated Terraform code. The API takes the customer request and returns the code to the customer.",
                "operationId": "iac_estimate_tool",
                "parameters": [
                    {
                        "name": "query",
                        "in": "path",
                        "description": "Customer query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Estimate cost of infrastructure",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "string",
                                            "description": "The cost of the infrastructure based on the generated Terraform code."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}